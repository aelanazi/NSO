<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
  <device>
      <name>{$PE-DEVICE}</name>
                 <config>
                    <interface xmlns="http://tail-f.com/ned/cisco-ios-xr" tags="merge" when="{/elan/link/interface-type='TenGigabitEthernet'}">
                     <TenGigE>
                       <id>{$PE-PORT-1}</id>
                       <description>[UNI-N] [$Leitungs-ID] [$CEDD Name/CEMUDD Name]</description>
                       <load-interval>30</load-interval>
                       <mtu>9022</mtu>
                     </TenGigE>
                     <TenGigE-subinterface>
                       <TenGigE>
                         <id>{$PE-PORT-1}.199</id>
                         <description>[UNI-N] [$CEDD Name] [Management]</description>
                         <encapsulation>
                           <dot1q>
                             <vlan-id>199</vlan-id>
                           </dot1q>
                         </encapsulation>
                         <rewrite>
                           <ingress>
                             <tag>
                               <pop>1</pop>
                               <mode>symmetric</mode>
                             </tag>
                           </ingress>
                         </rewrite>
                       </TenGigE>
                       <TenGigE>
                         <id>{$PE-PORT-1}.{$SVLAN-ID}</id>
                         <mode>l2transport</mode>
                         <description>[UNI-N] [$CEDD Name/CEMUDD Name] [{/customer}] [Kundennummer(Service-ID)]</description>
                         <encapsulation>
                           <dot1q>
                             <vlan-id>{$SVLAN-ID}</vlan-id>
                           </dot1q>
                         </encapsulation>
                         <rewrite>
                           <ingress>
                             <tag>
                               <pop>1</pop>
                               <mode>symmetric</mode>
                             </tag>
                           </ingress>
                         </rewrite>
                         <l2protocol>
                           <cpsv>tunnel</cpsv>
                         </l2protocol>
                       </TenGigE>
                     </TenGigE-subinterface>
                    </interface>
                    <interface xmlns="http://tail-f.com/ned/cisco-ios-xr" tags="merge" when="{/elan/link/interface-type='GigabitEthernet'}">
                     <GigabitEthernet>
                       <id>{$PE-PORT-1}</id>
                       <description>[UNI-N] [$CEDD Name] [Management]</description>
                       <mtu>9022</mtu>
                       <negotiation>
                         <auto/>
                       </negotiation>
                       <load-interval>30</load-interval>
                     </GigabitEthernet>
                     <GigabitEthernet-subinterface>
                       <GigabitEthernet>
                         <id>{$PE-PORT-1}.199</id>
                         <mode>l2transport</mode>
                         <description>[UNI-N] [$CEDD Name] [Management]</description>
                         <encapsulation>
                           <dot1q>
                             <vlan-id>199</vlan-id>
                           </dot1q>
                         </encapsulation>
                         <rewrite>
                           <ingress>
                             <tag>
                               <pop>1</pop>
                               <mode>symmetric</mode>
                             </tag>
                           </ingress>
                         </rewrite>
                       </GigabitEthernet>
                       <GigabitEthernet>
                         <id>{$PE-PORT-1}.{$SVLAN-ID}</id>
                         <mode>l2transport</mode>
                         <description>[UNI-N] [$CEDD Name] [{/customer}] [$Kundennummer($Service-ID)]</description>
                         <encapsulation>
                           <dot1q>
                             <vlan-id>{$SVLAN-ID}</vlan-id>
                           </dot1q>
                         </encapsulation>
                         <rewrite>
                           <ingress>
                             <tag>
                               <pop>1</pop>
                               <mode>symmetric</mode>
                             </tag>
                           </ingress>
                         </rewrite>
                         <l2protocol>
                           <cpsv>tunnel</cpsv>
                         </l2protocol>
                       </GigabitEthernet>
                     </GigabitEthernet-subinterface>
                   </interface>
                 </config>
               </device>
        </devices>
</config-template>
