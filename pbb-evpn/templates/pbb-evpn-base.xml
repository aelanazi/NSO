<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
  <device>
      <name>{$PE-DEVICE}</name>
                 <config>
                    <interface xmlns="http://tail-f.com/ned/cisco-ios-xr" tags="merge" when="{/link/interface-type='TenGigabitEthernet'}">
                     <TenGigE>
                       <id>{$PE-PORT-1}</id>
                       <description>[UNI-N] [$Leitungs-ID] [$CEDD Name/CEMUDD Name]</description>
                       <load-interval>30</load-interval>
                       <mtu>9022</mtu>
                     </TenGigE>
                     <TenGigE-subinterface>
                       <TenGigE>
                         <id>{$PE-PORT-1}.199</id>
                         <description>[UNI-N] [$CEDD Name] [Management]</description>
                         <encapsulation>
                           <dot1q>
                             <vlan-id>199</vlan-id>
                           </dot1q>
                         </encapsulation>
                         <rewrite>
                           <ingress>
                             <tag>
                               <pop>1</pop>
                               <mode>symmetric</mode>
                             </tag>
                           </ingress>
                         </rewrite>
                       </TenGigE>
                       <TenGigE>
                         <id>{$PE-PORT-1}.{$SVLAN-ID}</id>
                         <mode>l2transport</mode>
                         <description>[UNI-N] [$CEDD Name/CEMUDD Name] [{/customer-name}] [Kundennummer(Service-ID)]</description>
                         <encapsulation>
                           <dot1q>
                             <vlan-id>{$SVLAN-ID}</vlan-id>
                           </dot1q>
                         </encapsulation>
                         <rewrite>
                           <ingress>
                             <tag>
                               <pop>1</pop>
                               <mode>symmetric</mode>
                             </tag>
                           </ingress>
                         </rewrite>
                         <l2protocol>
                           <cpsv>tunnel</cpsv>
                         </l2protocol>
                       </TenGigE>
                     </TenGigE-subinterface>
                    </interface>
                    <interface xmlns="http://tail-f.com/ned/cisco-ios-xr" tags="merge" when="{/link/interface-type='GigabitEthernet'}">
                     <GigabitEthernet>
                       <id>{$PE-PORT-1}</id>
                       <description>[UNI-N] [$CEDD Name] [Management]</description>
                       <mtu>9022</mtu>
                       <negotiation>
                         <auto/>
                       </negotiation>
                       <load-interval>30</load-interval>
                     </GigabitEthernet>
                     <GigabitEthernet-subinterface>
                       <GigabitEthernet>
                         <id>{$PE-PORT-1}.199</id>
                         <mode>l2transport</mode>
                         <description>[UNI-N] [$CEDD Name] [Management]</description>
                         <encapsulation>
                           <dot1q>
                             <vlan-id>199</vlan-id>
                           </dot1q>
                         </encapsulation>
                         <rewrite>
                           <ingress>
                             <tag>
                               <pop>1</pop>
                               <mode>symmetric</mode>
                             </tag>
                           </ingress>
                         </rewrite>
                       </GigabitEthernet>
                       <GigabitEthernet>
                         <id>{$PE-PORT-1}.{$SVLAN-ID}</id>
                         <mode>l2transport</mode>
                         <description>[UNI-N] [$CEDD Name] [{/customer}] [$Kundennummer($Service-ID)]</description>
                         <encapsulation>
                           <dot1q>
                             <vlan-id>{$SVLAN-ID}</vlan-id>
                           </dot1q>
                         </encapsulation>
                         <rewrite>
                           <ingress>
                             <tag>
                               <pop>1</pop>
                               <mode>symmetric</mode>
                             </tag>
                           </ingress>
                         </rewrite>
                         <l2protocol>
                           <cpsv>tunnel</cpsv>
                         </l2protocol>
                       </GigabitEthernet>
                     </GigabitEthernet-subinterface>
                   </interface>
                   <evpn xmlns="http://tail-f.com/ned/cisco-ios-xr">
                     <evi>
                       <id>{/evi}</id>
                       <bgp>
                         <rd>65004:{/vpn-id}</rd>
                         <route-target>
                           <import>
                             <name>65004:{/vpn-id}</name>
                           </import>
                           <export>
                             <name>65004:{/vpn-id}</name>
                           </export>
                         </route-target>
                       </bgp>
                     </evi>
                   </evpn>
                   <l2vpn xmlns="http://tail-f.com/ned/cisco-ios-xr">
                     <bridge>
                       <group>
                         <group-name>PBB_EVPN_CORE</group-name>
                         <bridge-domain>
                           <bridge-domain-name>PBB_EVPN_CORE-100</bridge-domain-name>
                           <pbb>
                             <core>
                               <evpn>
                                 <evi>{/evi}</evi>
                               </evpn>
                             </core>
                           </pbb>
                         </bridge-domain>
                       </group>
                       <group>
                         <group-name>PBB_EVPN_EDGE</group-name>
                         <bridge-domain>
                           <bridge-domain-name>PBB_EVPN_EDGE-200</bridge-domain-name>
                           <mac>
                             <limit>
                               <maximum>4095</maximum>
                             </limit>
                           </mac>
                           <interface>
                             <name>{/link/interface-type}{/link/port-1}.{/link/svlan-id}</name>
                           </interface>
                           <pbb>
                             <edge>
                               <i-sid>{$EDGE-I-SID}</i-sid>
                               <core-bridge>PBB_EVPN_CORE-{/evi}</core-bridge>
                             </edge>
                           </pbb>
                         </bridge-domain>
                       </group>
                     </bridge>
                   </l2vpn>
                 </config>
               </device>
        </devices>
</config-template>
